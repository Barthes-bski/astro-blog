---
    import '@/styles/global.css';
    import { ViewTransitions } from 'astro:transitions';

    interface Props {
        title: string;
        description?:string;
        image?: string;
    }
    const { title, description = "ASTRO BLOG", image = "/assets/blog-img-1.jpg" } = Astro.props;

    const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<head>
    <!-- GLOBAL METADATA -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <!-- FONT PRELOADS -->
    <link rel="preload" href="/public/fonts/ProductSans-Black.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-BlackItalic.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-Bold.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-BoldItalic.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-Italic.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-Light.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-LightItalic.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-Medium.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-MediumItalic.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-Regular.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-Thin.ttf" as="font" type="font/ttf"
    crossorigin
    >
    <link rel="preload" href="/public/fonts/ProductSans-ThinItalic.ttf" as="font" type="font/ttf"
    crossorigin
    >

    <link rel="canonical" href={canonicalURL}/>
    <title> { title }</title>

    <!--META TAG PRIMARIAS -->
    <meta name="title" content={title}/>
    <meta name="description" content={description}/>

    <!-- Open Graph -->
    <meta property="og:type"  content="website"/>
    <meta property="og:url"  content={Astro.url}/>
    <meta property="og:title"  content={title}/>
    <meta property="og:description" content={description}/>
    <meta property="og:image" content={new URL(image, Astro.url)}/>

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <ViewTransitions></ViewTransitions>
</head>